generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = "mysql://root@127.0.0.1:3309/starter-db"
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  user      String    @unique
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  journals  Journal[]
}

model Journal {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageURL  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [user])
  userId    String?
}
